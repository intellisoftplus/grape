<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    tools:context="com.intellisoftplus.grape.CreateCallFragment">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="50dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <EditText
                    android:id="@+id/new_call_title"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Title"
                    android:textSize="16sp" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <EditText
                    android:id="@+id/new_call_description"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Description" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <EditText
                    android:id="@+id/new_call_association"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Association" />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/generateCallPurpose"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:drawablePadding="4dp"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="Purpose"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/new_call_purpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/generateCallTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textSize="16sp"
                android:text="Time"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/new_call_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/generateCallReminderPicker"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Reminder"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/new_call_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/submit_new_call"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="#303F9F"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:text="@string/submit"
                android:textColor="#ffffff"
                android:textSize="14sp"  />
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
    /
</ScrollView>
