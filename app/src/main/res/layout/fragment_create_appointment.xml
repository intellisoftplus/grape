<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:hint="@string/title" />
    
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:inputType="textMultiLine"
        android:layout_below="@id/title"
        android:ems="10"
        android:hint="@string/description" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/dtstart"
        android:layout_below="@+id/description"
        android:hint="@string/starting_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dtstartstr"
        android:layout_below="@+id/dtstart"
        android:text="@string/date_format"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/dtend"
        android:layout_below="@+id/dtstartstr"
        android:text="@string/stopping_date" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dtendstr"
        android:layout_below="@+id/dtend"
        android:text="@string/date_format"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/location"
        android:layout_below="@+id/dtendstr"
        android:id="@+id/location" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_day"
        android:layout_below="@+id/location"
        android:id="@+id/all_day" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/all_day"
        android:text="@string/submit"
        android:id="@+id/submit_appointment" />

</LinearLayout>
